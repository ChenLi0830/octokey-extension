{
    "manifest_version": 2,
    "name": "章鱼钥匙",
    "version": "0.1.7",
    "description": "Works with Octokey to provide better account management service",
    "icons": {
        "16": "images/logo_16.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },    
    "permissions": [
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "clipboardWrite",
        "https://*/",
        "http://*/"
    ],
    "web_accessible_resources": [
        "resources/loader.gif",
        "resources/logo_mono.png",
        "loader2.gif",
        "overlay.html",
        "overlay_complete.html"
    ],
    "externally_connectable": {
        "matches": [
            "http://localhost:3000/*",
            "http://114.215.98.118/*",
            "https://oyaoshi.com/*"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/chrome-icon.png",
            "38": "images/chrome-icon@2x.png"
        },
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
                "lib/meteor-ddp.js",
                "lib/jquery-2.2.0.js",
                "lib/core-min.js",
                "lib/cipher-core-min.js",
                "lib/aes-min.js",
                "scripts/chromereload.js",
                "scripts/background.js",
                "scripts/background_methods.js"
            ]
    },
    
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/*",
                "http://114.215.98.118/*",
                "https://oyaoshi.com/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/credentialFill.js",
                "lib/jquery-2.2.0.js",
                "scripts/general.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "scripts/register/github.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://reg.taobao.com/*"
            ],
            "js": [
                "scripts/register/taobao.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://www.dropbox.com/*"
            ],
            "js": [
                "scripts/register/dropbox.js"
            ],
            "run_at": "document_end"
        }
    ]
}

