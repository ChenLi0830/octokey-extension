{
    "manifest_version": 2,
    "name": "ZenId extension",
    "version": "0.1.5",
    "permissions": [
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "https://*/",
        "http://*/"
    ],
    "web_accessible_resources": ["resources/loader.gif", "overlay.html"],
    "externally_connectable": {
        "matches": [
            "http://localhost:3000/*",
            "http://114.215.98.118/*"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/*",
                "http://114.215.98.118/*",
                "http://zenid.meteor.com/*",
                "http://zenid.nocland.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "credentialFill.js",
                "lib/jquery-1.7.1.min.js",
                "lib/jquery.simulate.js",
                "lib/jquery.simulate.ext.js",
                "lib/bililiteRange.js",
                "lib/jquery.simulate.key-sequence.js",
                "lib/jquery.simulate.drag-n-drop.js",
                "general.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "register/github.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://reg.taobao.com/*"
            ],
            "js": [
                "register/taobao.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://www.dropbox.com/*"
            ],
            "js": [
                "register/dropbox.js"
            ],
            "run_at": "document_end"
        }
    ]
}

